#!/bin/sh

sudo xbps-install -S font-awesome nerd-fonts neovim tmux kitty zsh zsh-completions zsh-autosuggestion zsh-syntax-highlighting redshift curl base-devel xorg glibc

sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
chmod +x install.sh
./install.sh
rm $HOME/.zshrc
rm $HOME/.bash_history
rm $HOME/.bash_logout
rm $HOME/.bash_profile
rm $HOME/.bashrc

config="$HOME/.config"
dotfiles="$HOME/dotfiles"

mkdir $HOME/.config

ln -s "$dotfiles/nvim" "$config/nvim"
ln -s "$dotfiles/tmux" "$config/tmux"
ln -s "$dotfiles/picom" "$config/picom"
ln -s "$dotfiles/kitty" "$config/kitty"
ln -s "$dotfiles/redshift" "$config/redshift"
ln -s "$dotfiles/zshrc" "$HOME/.zshrc"
ln -s "$dotfiles/xinitrc" "$HOME/.xinitrc"

cd dwm
sudo make install

cd ../dwmblocks
sudo make install

