#!/bin/sh

choise="$(echo 'logout\nsuspend\nshutdown' | dmenu)"
case "$choise" in
  "logout") cmd="pkill -KILL -u $(whoami)"
  ;;
  "suspend") cmd="slock && loginctl suspend"
  ;;
  "shutdown") cmd="loginctl poweroff"
  ;;
esac

yayornay="$(echo 'yes\nno' | dmenu)"

case "$yayornay" in
  "yes") eval $cmd
  ;;
esac

